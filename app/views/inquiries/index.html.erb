<p id="notice"><%= notice %></p>

<h1>Listing Inquiries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Zip</th>
      <th>Prefecture</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Email</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.name %></td>
        <td><%= inquiry.zip %></td>
        <td><%= inquiry.prefecture %></td>
        <td><%= inquiry.address1 %></td>
        <td><%= inquiry.address2 %></td>
        <td><%= inquiry.email %></td>
        <td><%= inquiry.content %></td>
        <td><%= link_to 'Show', inquiry %></td>
        <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
        <td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

